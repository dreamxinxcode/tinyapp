<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('partials/_head') %>
  <title>TinyApp</title>
</head>

<body>
  <%- include('partials/_header') %>

  <main style="margin: 1em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% for (let url in urls) { %>
        <tr>
          <td><a href="/u/<%=url%>"><%= url %></a></td>
          <td><%= urls[url].longURL %></td>
          <td><a href="/urls/<%=url%>" class="btn btn-primary">Edit</a></td>
          <td>
            <form method="POST" action="/urls/<%=url%>/delete"><button type="submit"
                class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
    <a class="btn btn-primary" href="/urls/new">Create a New Short Link</a>
  </main>

  <%- include('partials/_scripts') %>
</body>

</html>